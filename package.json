{
  "name": "quickforms-ai-root",
  "private": true,
  "scripts": {
    "dev:web": "npm run dev --prefix apps/web",
    "dev:api": "npm run dev --prefix apps/api",
    "dev": "concurrently -n WEB,API -c blue,green \"npm:dev:web\" \"npm:dev:api\"",
    "build:web": "npm run build --prefix apps/web",
    "build:api": "npm run build --prefix apps/api",
    "build": "npm run build:web && npm run build:api"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
